{
  "name": "view-todo",
  "version": "1.3.0",
  "description": "TODO.md viewer app.",
  "main": "lib/index.js",
  "bin": {
    "view-todo": "bin/view-todo.js"
  },
  "scripts": {
    "start": "babel-node src/server.js",
    "test": "_mocha --require babel-register spec/**/*.js",
    "lib": "babel src -d lib",
    "site": "bulbo build",
    "lint": "souffle -2",
    "cov": "nyc --reporter=lcov npm test",
    "codecov": "npm run cov && codecov < coverage/lcov.info",
    "clean": "echo remove site and lib",
    "dist": "npm run lib && npm run site",
    "prepublish": "npm run clean && npm run dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kt3k/view-todo.git"
  },
  "keywords": [
    "todo",
    "project",
    "management"
  ],
  "author": "Yoshiya Hinosawa <stibium121@gmail.com> (https://twitter.com/kt3k)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kt3k/view-todo/issues"
  },
  "homepage": "https://github.com/kt3k/view-todo#readme",
  "babel": {
    "presets": [
      "es2015",
      "decorators-legacy"
    ]
  },
  "dependencies": {
    "editor": "^1.0.0",
    "hapi": "^13.0.0",
    "inert": "^3.2.0",
    "js-yaml": "^3.6.0",
    "marked": "^0.3.5",
    "minimist": "^1.2.0",
    "open": "0.0.5"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-preset-decorators-legacy": "^1.0.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-register": "^6.7.2",
    "babelify": "^7.2.0",
    "bootstrap": "^3.3.6",
    "browserify": "^13.0.0",
    "bulbo": "^4.2.2",
    "cc-event": "^2.0.2",
    "chai": "^3.5.0",
    "class-component": "^5.6.0",
    "codecov.io": "^0.1.6",
    "dom-gen": "^2.0.0",
    "es6-promise": "^3.1.2",
    "gulp-front-matter": "^1.3.0",
    "gulp-wrap": "^0.11.0",
    "jquery": "^2.2.2",
    "mocha": "^2.4.5",
    "nunjucks": "^2.4.2",
    "nyc": "^6.1.1",
    "souffle-cli": "^3.1.0",
    "through": "^2.3.8"
  },
  "souffle": {
    "globals": [
      "$",
      "describe",
      "it"
    ]
  },
  "nyc": {
    "exclude": [
      "spec"
    ]
  }
}
